@page
@model OnlineBankingSystem.Pages.Withdrawl.WithdrawlPageModel
@{
    ViewData["title"] = "withdraw funds";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded">
                <div class="card-header bg-primary text-white">
                    <h2>WithDraw Fund</h2>
                </div>
                <div class="card-body">
                    <form method="post" id="withdrawForm">
                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label fw-bold">Amount</label>
                            <input asp-for="Amount" class="form-control" placeholder="Enter amount to withdraw" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                        <input type="hidden" asp-for="AccountId" />
                        <button type="button" class="btn btn-success w-100" data-bs-toggle="modal" data-bs-target="#confirmModals">💸 Withdraw</button>
                    </form>
                    <!--Confirmation Modal-->
                    <div class="modal fade" id="confirmModals" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header bg-primary text-white">
                                    <h5 class="modal-title" id="confirmModalLabel">Confirm WithDraw</h5>
                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Are you sure you want to withdraw?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="button" class="btn btn-success" onclick="submitWithdrawForm()">Yes, Confirm</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="mt-3">
                <a asp-page="/Accounts/AccountPage" asp-route-id="@Model.AccountId" class="btn btn-outline-secondary w-100">
                    ← Back to Account Details
                </a>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function submitWithdrawForm(){
            document.getElementById('withdrawForm').submit();
        }
    </script>
}

