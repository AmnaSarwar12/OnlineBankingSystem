@page
@model OnlineBankingSystem.Pages.Register.RegistrationPageModel
@{
    ViewData["Title"] = "Register";
}

<div class="d-flex justify-content-center align-items-center vh-100" style="background: linear-gradient(135deg, #e0eafc, #cfdef3);">
    <div class="card shadow-lg p-5" style="width: 100%; max-width: 420px; border-radius: 1rem;">
        <div class="text-center mb-4">
            <i class="bi bi-person-plus-fill text-primary" style="font-size: 2rem;"></i>
            <h3 class="mt-2">Create an Account</h3>
            <p class="text-muted small">Join us to manage your banking securely.</p>
        </div>


        <form method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-semibold"></label>
                <input asp-for="Name" type="text" class="form-control rounded-pill" placeholder="Enter your name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold"></label>
                <input asp-for="Email" type="email" class="form-control rounded-pill" placeholder="you@example.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-semibold"></label>
                <input asp-for="Password" type="password" class="form-control rounded-pill" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 rounded-pill fw-semibold">Register</button>
        </form>
        <div class="text-center mt-4">
            <small class="text-muted">
                Already have an account?
                <a href="/Login/LoginPage" class="text-primary text-decoration-none fw-bold">Login</a>
            </small>
        </div>
    </div>
</div>
